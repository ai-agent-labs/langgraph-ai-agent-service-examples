# ===========================================
# RAG 에이전트 환경변수 설정
# ===========================================
#
# 이 파일을 .env로 복사한 후 실제 값을 입력하세요:
#   cp .env.example .env
#
# 주의: .env 파일은 절대로 git에 커밋하지 마세요!
# ===========================================

# -------------------------------------------
# OpenAI API 설정
# -------------------------------------------
# API 키 발급: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# -------------------------------------------
# OpenSearch 설정
# -------------------------------------------
# Docker로 로컬 실행 시 기본값
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
# 인증이 필요한 경우 (AWS OpenSearch Service 등)
# OPENSEARCH_USER=admin
# OPENSEARCH_PASSWORD=admin

# -------------------------------------------
# 모델 설정
# -------------------------------------------
# LLM 모델
DEFAULT_MODEL=gpt-5.2
# 임베딩 모델
EMBEDDING_MODEL=text-embedding-3-small
# 리랭킹 모델 (로컬 실행)
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# -------------------------------------------
# RAG 설정
# -------------------------------------------
# 인덱스 이름
INDEX_NAME=company-docs
# 청크 크기 (글자 수)
CHUNK_SIZE=500
# 청크 오버랩 (글자 수)
CHUNK_OVERLAP=50
# 검색 결과 수
SEARCH_TOP_K=5
# 리랭킹 후 최종 결과 수
RERANK_TOP_K=3

# -------------------------------------------
# 하이브리드 검색 가중치
# -------------------------------------------
# 벡터 검색 가중치 (0~1)
VECTOR_WEIGHT=0.7
# 키워드 검색 가중치 (0~1)
KEYWORD_WEIGHT=0.3

# -------------------------------------------
# 애플리케이션 설정
# -------------------------------------------
# 디버그 모드 (true/false)
DEBUG=false
